<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".clients_management.CreateClientActivity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >
            <ImageView
                android:id="@+id/exit_btn"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_exit"
                app:tint="@color/colorDarkGray"
                android:layout_marginLeft="8dp"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Novo cliente"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:textStyle="bold"
                ></TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Foto do Cliente"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_gravity="center"></TextView>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile_pic"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            ></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do cliente"
                android:textSize="14dp"
                ></TextView>
            <EditText
                android:id="@+id/nomeclient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Fillipe Augusto"
                android:textColorHint="@color/colorBlack"
                ></EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:layout_weight="2"
                    android:inputType="number">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="fillipe.bonanome@gmail.com"
                    android:textColorHint="@color/colorBlack"
                    android:inputType="textEmailAddress">
                </EditText>

            </LinearLayout>

            <EditText
                android:id="@+id/cpfclient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="CPF"
                android:inputType="text"
                android:textColorHint="@color/colorBlack"></EditText>
            <EditText
                android:id="@+id/phoneclient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Telefone"
                android:inputType="phone"
                android:textColorHint="@color/colorBlack"></EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/logradouro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="4"
                android:hint="Logradouro"
                android:inputType="phone"
                android:textColorHint="@color/colorBlack"></EditText>
                <EditText
                    android:id="@+id/bairro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="3"
                    android:hint="Bairro"
                    android:inputType="phone"
                    android:textColorHint="@color/colorBlack"></EditText>
                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="5"
                    android:hint="NÂº"
                    android:inputType="phone"
                    android:textColorHint="@color/colorBlack"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="5"
                android:hint="Cidade"
                android:inputType="phone"
                android:textColorHint="@color/colorBlack"
                ></EditText>
                <EditText
                    android:id="@+id/cep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="5"
                    android:hint="CEP"
                    android:inputType="phone"
                    android:textColorHint="@color/colorBlack"
                    ></EditText>
                <EditText
                    android:id="@+id/uf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="7"
                    android:hint="UF"
                    android:inputType="phone"
                    android:textColorHint="@color/colorBlack"
                    ></EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/btn_cad_prod"
                android:text="Cadastrar Cliente"
                android:textColor="#D8D8D8"
                android:textSize="16dp"></Button>
        </LinearLayout>




    </LinearLayout>
</ScrollView>