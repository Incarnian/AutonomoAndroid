<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products_management.CreateProductActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    >
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_exit"
        app:tint="@color/colorDarkGray"
        android:layout_marginLeft="8dp"
        >
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Novo produto"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        ></TextView>
</LinearLayout>
    <ImageView
        android:id="@+id/imagemproduto"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:src="@drawable/acai"
        android:scaleType="centerCrop"
        ></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do produto"
            android:textSize="14dp"
            ></TextView>
            <EditText
                android:id="@+id/nomeprod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Açai com Banana"
                android:textColorHint="@color/colorBlack"
                ></EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:layout_weight="2"
                    android:layout_marginRight="8dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preço de venda"
                    android:layout_weight="2"
                    android:layout_marginLeft="8dp">
                </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">
            <EditText
                android:id="@+id/idprod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="8dp"
                android:hint="10001"
                android:textColorHint="@color/colorBlack"
                android:inputType="number"
                >
            </EditText>
            <EditText
                android:id="@+id/precoprod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="8dp"
                android:hint="15.00"
                android:inputType="numberDecimal"
                android:textColorHint="@color/colorBlack">
            </EditText>

        </LinearLayout>

        <EditText
            android:id="@+id/unidadeprod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableRight="@drawable/ic_arrow_down"
            android:drawableTint="@color/colorGray"
            android:hint="Vender por: Unidade"
            android:inputType="text"
            android:textColorHint="@color/colorBlack"></EditText>
        <EditText
            android:id="@+id/fornecedorprod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableRight="@drawable/ic_arrow_down"
            android:drawableTint="@color/colorGray"
            android:hint="Fornecedor"
            android:inputType="text"
            android:textColorHint="@color/colorBlack"></EditText>
        <EditText
            android:id="@+id/descricaoprod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableRight="@drawable/ic_arrow_down"
            android:drawableTint="@color/colorGray"
            android:hint="Descrição"
            android:inputType="text"
            android:textColorHint="@color/colorBlack"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/cadastro"
            android:background="@drawable/btn_cad_prod"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Cadastrar Produto"
            android:textColor="#D8D8D8"
            ></Button>
    </LinearLayout>


</LinearLayout>
</ScrollView>